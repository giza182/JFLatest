@model JFLatest.Models.RegisterEmployer
@{
    ViewBag.Title = "Register";
}

<section id="registerForm" class="" style="margin:0 auto; float:none">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        @*<div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    register
                </h3>
            </div>

            <div class="panel-body">*@
        <div class="col-md-6">
            <div style="margin-bottom:10px">
                @Html.LabelFor(m => m.name)
                @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.email)
                @Html.TextBoxFor(m => m.email, null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>

            <div style="margin-bottom:10px">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-6">
            <div style="margin-bottom:10px">
                @Html.LabelFor(m => m.contactNumber)
                @Html.TextBoxFor(m => m.contactNumber, new { @class = "form-control" })
            </div>

            <div style="margin-bottom:10px">
                @Html.LabelFor(m => m.address)
                @Html.TextAreaFor(m => m.address, new { @class = "form-control" })
            </div>
        </div>
        <div style="position:relative;">
            <input class=" btn btn-primary pull-right" type="submit" value="register" style="position:absolute;bottom:30px;right:30px;margin:0;" />
        </div>
        @*</div>
            </div>*@

    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}