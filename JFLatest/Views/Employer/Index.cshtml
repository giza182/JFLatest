@model IEnumerable<JFLatest.vacancy>

@{
    ViewBag.Title = "Dashboard";
}

<div>

    <div class="panel panel-default">
        <div class="panel-heading"><h4>Vacancies</h4></div>
        <div class="panel-body">

            <table class="table table-striped table-hover table-responsive"   >
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.location)
                        </th>
                        <th>
                            created
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (JFLatest.vacancy vac in Model)
                    {
                        <tr>
                            <td>@vac.name.ToString()</td>
                            <td>@vac.location</td>
                            <td>@vac.timestamp.ToString("dd MMM yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
            <p class="pull-right">
                @Html.ActionLink("Add", "AddVacancy")
            </p>
        </div><!--/panel-body-->
    </div><!--/panel-->

    <div class="panel panel-default">
        <div class="panel-heading"><h4>Schedule</h4></div>
        <div class="panel-body">
            <small>Success</small>
            <div class="progress">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="72" aria-valuemin="0" aria-valuemax="100" style="width: 72%">
                    <span class="sr-only">72% Complete</span>
                </div>
            </div>
        </div><!--/panel-body-->
    </div><!--/panel-->

    <div class="panel panel-default">
        <div class="panel-heading"><h4>Schedule</h4></div>
        <div class="panel-body">
            <small>Success</small>
            <div class="progress">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="72" aria-valuemin="0" aria-valuemax="100" style="width: 72%">
                    <span class="sr-only">72% Complete</span>
                </div>
            </div>
        </div><!--/panel-body-->
    </div><!--/panel-->
</div>