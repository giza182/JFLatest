<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Job Fair</title>
    <link href="~/favicon.png" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/bootstrap.css")
    @*@Styles.Render("~/Content/Site.css")*@
    @Scripts.Render("~/bundles/modernizr")
</head>
<body @*style="background-image:url(../16.jpg)"*@>
    <header>
        <nav class="navbar navbar-default" style="border-radius:0 !important" role="navigation">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <a class="navbar-brand " style="margin-top: 5px; font-size: 40px">JOB<font style="color: rgba(227, 114, 34, 0.9); text-shadow: 0.5px 0.5px #6c7b83;">Fairé</font></a>
                <div class="collapse navbar-collapse " style="border-radius:0 !important" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav" style="border-radius:0 !important">
                        <li> @Html.ActionLink("Home", "Index", "Home")  </li>
                        <li> @Html.ActionLink("about", "About", "Home") </li>
                        <li> @Html.ActionLink("contact", "Contact", "Home") </li>
                    </ul>
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                    </nav>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </header>

    <div id="body">

        <section class="col-sm-2">
            <!-- left -->
            <h3> Menu</h3>
            <hr>
            <ul class="nav nav-stacked">
                <li>@Html.ActionLink("Dashboard", "Index", "Employer")</li>
                <li>@Html.ActionLink("Add Vacancy", "AddVacancy", "Employer")</li>
                <li><a href="javascript:;"><i class="glyphicon glyphicon-list-alt"></i> Reports</a></li>
                <li><a href="javascript:;"><i class="glyphicon glyphicon-book"></i> Books</a></li>
                <li><a href="javascript:;"><i class="glyphicon glyphicon-briefcase"></i> Tools</a></li>
                <li><a href="javascript:;"><i class="glyphicon glyphicon-time"></i> Real-time</a></li>
                <li><a href="javascript:;"><i class="glyphicon glyphicon-plus"></i> Advanced..</a></li>
            </ul>
        </section>
        @RenderSection("featured", required: false)
        <section class="col-sm-9 col-md-10">
            <h3>@ViewBag.Title</h3>
            <hr>
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left" style="position:fixed !important;
                 width:100%;
                 bottom:0;text-align:right">
                <p>&copy; @DateTime.Now.Year - Job Fairé</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap.js")
</body>
</html>
